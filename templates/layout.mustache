<html>
<head>
  <title>{{title}}</title>
  <style type="text/css">
    {{#styles}}
      {{{.}}}
    {{/styles}}
  </style>
</head>
<body>
  <div id="wrapper">
    {{#slides}}
      <section class="slide">
        <article class="content">{{{.}}}</article>
      </section>
    {{/slides}}
  </div>
  {{#controls}}
    <div id="controls">
      <div id="prev">&larr;</div>
      <div id="next">&rarr;</div>
    </div>
  {{/controls}}
  <script type="text/javascript">
    {{{jquery}}}
    {{{navigation}}}
  </script>
</body>
</html>
